# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

# The following `prisma+postgres` URL is similar to the URL produced by running a local Prisma Postgres 
# server with the `prisma dev` CLI command, when not choosing any non-default ports or settings. The API key, unlike the 
# one found in a remote Prisma Postgres URL, does not contain any sensitive information.

DATABASE_URL=YOUR_DATABASE_URL

BACKEND_URL=YOUR_BACKEND_URL

FRONTEND_URL=YOUR_FRONTEND_URL

JWT_ALGORITHM=HS512

JWT_ACCESS_TOKEN_SECRET=YOUR_ACCESS_TOKEN_SECRET
# JWT_ACCESS_TOKEN_EXPIRY_TIME => 60*15
JWT_ACCESS_TOKEN_EXPIRY_TIME=900

JWT_REFRESH_TOKEN_SECRET=YOUR_REFRESH_TOKEN_SECRET
# JWT_REFRESH_TOKEN_EXPIRY_TIME => 60*60*24
JWT_REFRESH_TOKEN_EXPIRY_TIME=86400

# Google O'auth
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_REDIRECT_URI=YOUR_CALLBACK_URL

# OAUTH_STATE_TOKEN_EXPIRY_TIME => 1000*60*3
OAUTH_STATE_TOKEN_EXPIRY_TIME=180000

# In Miliseconds
VERIFICATION_TOKEN_EXPIRY_TIME=3600000

# In Miliseconds
PASSWORD_RESET_TOKEN_EXPIRY_TIME=3600000

# Grab these keys from ahasend.com
EMAIL_CLIENT_API_KEY=YOUR_EMAIL_CLIENT_API_KEY
EMAIL_API_BASE_URL=https://api.ahasend.com
FROM_EMAIL=YOUR_FROM_EMAIL
FROM_NAME=YOUR_FROM_NAME

# Grab these key from mails.so
EMAIL_VERIFIER_API_KEY=YOUR_EMAIL_VERIFIER_API_KEY